# include <iostream>
# include <math.h>
#  include<climits>

#define MAX_REQUEST 100

using namespace std;


void sstf (int requests[],int n,int initial_head){
 int tst=0;
 int ch=initial_head;

 int visited[MAX_REQUEST]={0};

 for (int i=0;i<n;i++){
    int mst=INT_MAX;
    int nr =-1;
     for (int j=0;j<n;j++){
        if(!visited[j]){
         int seek=abs(ch-requests[j]);

         if (seek <mst){

            mst=seek;
            nr=j;
         }

        }

 }
    visited[nr] = 1;

        // Update the seek time and current head position 
        tst += mst;
        cout << "Move from " << ch << " to " << requests[nr] 
             << " (Seek Time: " << mst << ")\n";
        ch = requests[nr];
 }
 cout << "Total Seek Time: " << tst << endl;

}

int main(){
int n;
cout<<"enter the number of elements"<<endl;
cin>>n;

int initial_head;
cout<<"Enter the intial head of the given"<<endl;
cin>>initial_head;


if(n<0 || n>MAX_REQUEST){

    cout<<"Invalid input"<<endl;
    return 1;
}

int requests[MAX_REQUEST];

  cout<<"enter the track request"<<n<<endl;
for(int i=0;i<n;i++){
  
cin>>requests[i];
}
    sstf(requests, n, initial_head);

    return 0;
}
